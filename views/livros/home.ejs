<% include ../partials/header.ejs %>
<h1>Livros cadastrados</h1>
<p><a href="/livros/create">Novo Livro</a></p>
<form method="post">
    <table class="table table-striped table-hover table-bordered">
        <tr>
            <th>Titulo</th>
            <th>Isbn</th>
            <th>Publicação</th>
            <th>Autor</th>
            <th>Ações</th>
        </tr>
        <% livros.map(livro => { %>
            <tr>
                <td><%= livro.titulo %></td>
                <th><%= livro.isbn %></td>
                <td><%= livro.publicacao %></td>
                <td><%= livro.autor %></td>
                <td>
                    <div class="btn-group" role="group">
                        <a href="livros/edit/<%= livro.id %>" class="btn btn-primary">Editar</a>
                        <a href="livros/delete/<%= livro.id %>" class="btn btn-primary">Excluir</a>
                    </div>   
                </td>
            </tr>
        <% }) %>
    </table> 
</form>
